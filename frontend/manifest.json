{
  "manifest_version": 3,
  "name": "YouTube Video Downloader",
  "version": "1.1",
  "description": "Paste a YouTube URL and download the video via local server",
  "permissions": ["downloads"],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://youtube-ext-1.onrender.com/*",
    "https://*.onrender.com/*"
  ],
  "icons": {
    "16":  "icons/icon16.png",
    "32":  "icons/icon32.png",
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_popup": "popup.html"
  }
}
